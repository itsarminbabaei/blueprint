# Glow - Markdown preview
# Docs: https://github.com/ellisonleao/glow.nvim
# Preview markdown files with glow in a floating window

{
  plugins.glow = {
    enable = true;
    settings = {
      border = "rounded";
      style = "dark";
      width = 120;
      height_ratio = 0.8;
      width_ratio = 0.8;
    };
  };
}
